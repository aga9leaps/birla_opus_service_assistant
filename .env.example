# Birla Opus Chatbot - Environment Variables

# Application
APP_NAME=Birla Opus Chatbot
DEBUG=true
ENV=development

# API
API_HOST=0.0.0.0
API_PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/birla_opus

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM - Google Gemini (for multi-language support)
GEMINI_API_KEY=your-gemini-api-key-here

# Authentication
JWT_SECRET=change-this-to-a-secure-secret-in-production
JWT_EXPIRY_HOURS=24
OTP_EXPIRY_MINUTES=5

# WhatsApp Integration (Optional - Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=

# WhatsApp Integration (Optional - Meta Cloud API)
META_APP_ID=
META_APP_SECRET=
META_PHONE_NUMBER_ID=
META_ACCESS_TOKEN=
META_VERIFY_TOKEN=
